{
    "version": 1.0,
    "name": "builtin.shadowmap_sampling_shader",
    "renderpass": "Renderpass.Builtin.ShadowmapSampling",
    "stages": [
        "vertex",
        "fragment"
    ],
    "cull_mode": "back",
    "enable_blending": false,
    "attributes": [
        {
            "name": "in_position",
            "type": "vec3"
        },
        {
            "name": "in_normal",
            "type": "vec3"
        },
        {
            "name": "in_tangent",
            "type": "vec3"
        },
        {
            "name": "in_color",
            "type": "vec4"
        },
        {
            "name": "in_texcoord",
            "type": "vec2"
        }
    ],
    "descriptor_sets": [
        {
            "scope": "global",
            "set_index": 0,
            "bindings": [
                {
                    "type": "uniform",
                    "binding_index": 0,
                    "stages": [
                        "vertex"
                    ],
                    "uniforms": [
                        {
                            "name": "projection",
                            "type": "mat4"
                        },
                        {
                            "name": "view",
                            "type": "mat4"
                        },
                        {
                            "name": "light_space_directional",
                            "type": "mat4"
                        }
                    ]
                },
                {
                    "type": "sampler",
                    "binding_index": 1,
                    "count": 1,
                    "stages": [
                        "fragment"
                    ],
                    "uniforms": [
                        {
                            "name": "shadowmap_directional_texture",
                            "type": "sampler2D"
                        }
                    ]
                }
            ]
        }
    ],
    "push_constants": [
        {
            "name": "model",
            "type": "mat4"
        }
    ]
}